{
  "version": 2,
  "builds": [
    {
      "src": "api/predict.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/predict.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/predict.py"
    }
  ],
  "env": {
    "HF_TOKEN": "@hf_token"
  },
  "functions": {
    "api/predict.py": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}